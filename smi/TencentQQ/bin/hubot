#!/bin/sh

set -e

npm install
export PATH="node_modules/.bin:node_modules/hubot/node_modules/.bin:$PATH"

# custom env
export HUBOT_QQ_ID="1905046101"
export HUBOT_QQ_PASS="inazumasaikou225"
export HUBOT_QQ_GROUP=""
export HUBOT_QQ_IMGPORT=3100
export HUBOT_QQ_DEBUG=True

# init tmp dir
mkdir -p node_modules/hubot-qq/tmp

exec node_modules/.bin/hubot --name "Inazuma" "$@"